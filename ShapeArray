public class ShapeArray {
    public static void main(String[] args) {
        Shape[] shapes = new Shape[3];
        shapes[0] = new Sphere(5);
        shapes[1] = new Cylinder(3, 7);
        shapes[2] = new Cone(3, 5);

        for (Shape shape : shapes) {
            System.out.println(shape);
        }
    }
}
